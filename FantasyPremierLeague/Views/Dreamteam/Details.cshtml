@model FantasyPremierLeague.ViewModels.DreamteamDetailViewModel

@{
    ViewData["Title"] = "Details Dreamteam";
}

<div class="text-center">
    <h1 class="display-5">Details Dreamteam</h1>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th></th>
            <th>@Html.DisplayNameFor(model => model.dreamteam[0].first_name_and_web_name)</th>
            <th>@Html.DisplayNameFor(model => model.dreamteam[0].points)</th>
            <th>@Html.DisplayNameFor(model => model.dreamteam[0].team_name)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.dreamteam)
        {
            <tr>
                <th scope="col">@item.position</th>
                <td>
                    <a asp-controller="Element" asp-action="Details" asp-route-id="@item.element">
                        @item.first_name_and_web_name
                    </a>
                </td>
                @*<td><a asp-controller="Element" asp-action="Details" asp-route-id="@Model.Players[i].id">@Model.Players[i].web_name</a></td>*@
                <td>@item.points</td>
                <td>
                    <a asp-controller="Team" asp-action="Details" asp-route-id="@item.team">
                        @item.team_name
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <h1 class="display-5">Prediction Dreamteam</h1>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>BPS</th>
            <th>ICT</th>
            <th>Points</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.dreamteam_prediction)
        {
            <tr>
                <td>
                    <a asp-controller="Element" asp-action="Details" asp-route-id="@item.id">
                        @item.first_name_and_web_name
                    </a>
                </td>
                <td>@item.stats.bps</td>
                <td>@item.stats.ict_index</td>
                <td>@item.stats.total_points</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <h1 class="display-5">Fixtures list (@Model.fixtures_list.Count)</h1>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            @*<th>@Html.DisplayNameFor(model => model.fixtures_list[0].id)</th>*@
            <th data-bs-trigger="hover focus"
                data-bs-toggle="popover"
                data-bs-placement="top"
                data-bs-content="@Html.DisplayNameFor(model => model.fixtures_list[0].Event)"
                class="text-center">
                GW
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fixtures_list[0].team_h)
                (@Html.DisplayNameFor(model => model.fixtures_list[0].team_a_difficulty))
            </th>
            <th>@Html.DisplayNameFor(model => model.fixtures_list[0].team_h_score)</th>
            <th>
                @Html.DisplayNameFor(model => model.fixtures_list[0].team_a)
                (@Html.DisplayNameFor(model => model.fixtures_list[0].team_a_difficulty))
            </th>
            <th>@Html.DisplayNameFor(model => model.fixtures_list[0].kickoff_time)</th>
            <th data-bs-trigger="hover focus"
                data-bs-toggle="popover"
                data-bs-placement="top"
                data-bs-content="@Html.DisplayNameFor(model => model.fixtures_list[0].predicted_winner)"
                class="text-center">
                PW
            </th>
            <th data-bs-trigger="hover focus"
                data-bs-toggle="popover"
                data-bs-placement="top"
                data-bs-content="@Html.DisplayNameFor(model => model.fixtures_list[0].actual_winner)"
                class="text-center">
                AW
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.fixtures_list)
        {
            <tr>
                @*<td>@item.id</td>*@
                <td>@item.Event</td>
                <td><a asp-controller="Team" asp-action="Details" asp-route-id="@item.team_h">@item.team_h_name</a> (@item.team_a_difficulty)</td>
                <td>@item.team_h_score - @item.team_a_score</td>
                <td><a asp-controller="Team" asp-action="Details" asp-route-id="@item.team_a">@item.team_a_name</a> (@item.team_h_difficulty)</td>
                <td>@item.kickoff_time</td>
                <td class="text-center">@item.predicted_winner</td>
                <td class="text-center">@item.actual_winner</td>
                <td><a asp-controller="Fixture" asp-action="Details" asp-route-id="@item.id">Details</a></td>
            </tr>
        }
    </tbody>
</table>