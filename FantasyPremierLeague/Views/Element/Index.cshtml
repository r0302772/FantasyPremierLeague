@model FantasyPremierLeague.ViewModels.ElementListViewModel

@{
    ViewData["Title"] = "Players";
}

<h2>All Players</h2>

<form asp-controller="Element" asp-action="Index">
    <div class="row mb-3">
        <div class="col-3">
            <label for="team" class="col-form-label">Team</label>
            <select class="form-select" asp-for="@Model.team_id" asp-items="@Model.teams_selectlist" id="team">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-3">
            <label for="position" class="col-form-label">Position</label>
            <select class="form-select" asp-for="@Model.element_type_id" asp-items="@Model.element_types_selectlist" id="element_type">
                <option value="">All</option>
            </select>
        </div>
        @*Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />*@
    </div>
    <div class="row">
        <div class="col-auto">
            <input type="submit" value="Filter" />
        </div>
    </div>
</form>

<table class="table table-hover table-striped-columns">
    <thead>
        <tr>
            <th>ID</th>
            <th>Position</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.elements_list)
        {
            <tr>
                <td>@x.id</td>
                <td>@x.element_type</td>
                <td><a asp-action="Details" asp-route-id="@x.id">@x.first_name @x.web_name</a></td>
                <td><a asp-controller="Team" asp-action="Details" asp-route-id="@x.team">@x.team</a></td>
            </tr>
        }
    </tbody>
</table>