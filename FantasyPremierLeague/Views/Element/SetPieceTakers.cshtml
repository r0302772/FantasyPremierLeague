@model FantasyPremierLeague.ViewModels.ElementListViewModel

@{
    ViewData["Title"] = "Set Piece Takers";
}

<div class="text-center">
    <h1 class="display-5">All Set Piece Takers</h1>
</div>

<form asp-controller="Element" asp-action="SetPieceTakers">
    <div class="row mb-3">
        <div class="col-3">
            <label for="team" class="col-form-label">Team</label>
            <select class="form-select" asp-for="@Model.team_id" asp-items="@Model.teams_selectlist" id="team">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-3">
            <label for="element_type" class="col-form-label">Position</label>
            <select class="form-select" asp-for="@Model.element_type_id" asp-items="@Model.element_types_selectlist" id="element_type">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-3">
            <label for="set_piece" class="col-form-label">Set Piece</label>
            <select class="form-select" asp-for="@Model.set_piece_id" asp-items="@Model.set_piece_selectlist" id="set_piece">
                <option value="">All</option>
            </select>
        </div>
        @*Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />*@
    </div>
    <div class="row">
        <div class="col-auto">
            <input type="submit" value="Filter" />
        </div>
    </div>
</form>

<table class="table table-hover table-striped-columns">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.elements_list[0].id)</th>
            <th data-bs-trigger="hover focus"
                data-bs-toggle="popover"
                data-bs-placement="top"
                data-bs-content="@Html.DisplayNameFor(model => model.elements_list[0].element_type)"
                class="text-center">
                @Html.DisplayNameFor(model => model.elements_list[0].element_type).Substring(0, 1)
            </th>
            <th data-bs-trigger="hover focus"
                data-bs-toggle="popover"
                data-bs-placement="top"
                data-bs-content="@Html.DisplayNameFor(model => model.elements_list[0].now_cost)"
                class="text-center">
                C
            </th>
            <th>Name</th>
            <th data-bs-trigger="hover focus"
                data-bs-toggle="popover"
                data-bs-placement="top"
                data-bs-content="@Html.DisplayNameFor(model => model.elements_list[0].goals_scored)"
                class="text-center">
                @Html.DisplayNameFor(model => model.elements_list[0].goals_scored).Substring(0, 1)
            </th>
            <th data-bs-trigger="hover focus"
                data-bs-toggle="popover"
                data-bs-placement="top"
                data-bs-content="@Html.DisplayNameFor(model => model.elements_list[0].assists)"
                class="text-center">
                @Html.DisplayNameFor(model => model.elements_list[0].assists).Substring(0, 1)
            </th>
            <th data-bs-trigger="hover focus"
                data-bs-toggle="popover"
                data-bs-placement="top"
                data-bs-content="@Html.DisplayNameFor(model => model.elements_list[0].bps)"
                class="text-center">
                BPS
            </th>
            <th data-bs-trigger="hover focus"
                data-bs-toggle="popover"
                data-bs-placement="top"
                data-bs-content="@Html.DisplayNameFor(model => model.elements_list[0].ict_index)"
                class="text-center">
                @Html.DisplayNameFor(model => model.elements_list[0].ict_index).Substring(0, 3)
            </th>
            <th>@Html.DisplayNameFor(model => model.elements_list[0].corners_and_indirect_freekicks_order)</th>
            <th>@Html.DisplayNameFor(model => model.elements_list[0].direct_freekicks_order)</th>
            <th>@Html.DisplayNameFor(model => model.elements_list[0].penalties_order)</th>
            <th>@Html.DisplayNameFor(model => model.elements_list[0].penalties_missed)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.elements_list)
        {
            <tr>
                <td>@x.id</td>
                <td>@x.element_type</td>
                <td>@x.now_cost</td>
                <td><a asp-action="Details" asp-route-id="@x.id">@x.first_name @x.web_name</a></td>
                <td class="text-center">@x.goals_scored</td>
                <td class="text-center">@x.assists</td>
                <td class="text-center">@x.bps</td>
                <td class="text-center">@x.ict_index</td>
                <td>@x.corners_and_indirect_freekicks_order</td>
                <td>@x.direct_freekicks_order</td>
                <td>@x.penalties_order</td>
                <td>@x.penalties_missed</td>
            </tr>
        }
    </tbody>
</table>