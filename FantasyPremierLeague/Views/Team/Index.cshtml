@model BootstrapStatic

@{
    ViewData["Title"] = "Teams";
}

<h2>All Teams</h2>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.teams)
        {
        <tr>
            <td>@x.id</td>
            <td>@x.name</td>
            <td>
                <a asp-action="Details" asp-route-id="@x.id">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>
