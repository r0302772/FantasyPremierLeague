@model FantasyPremierLeague.ViewModels.FixtureListViewModel

@{
    ViewData["Title"] = "Fixtures";
}

<h2>All Fixtures</h2>

<form asp-controller="Fixture" asp-action="Index">
    <div class="row mb-3">
        <div class="col-3">
            <label for="team" class="col-form-label">Team</label>
            <select class="form-select" asp-for="@Model.team_id" asp-items="@Model.teams_selectlist" id="team">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-3">
            <label for="event" class="col-form-label">Gameweek</label>
            <select class="form-select" asp-for="@Model.event_id" asp-items="@Model.events_selectlist" id="event">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-3">
            <label for="phase" class="col-form-label">Phase</label>
            <select class="form-select" asp-for="@Model.phase_id" asp-items="@Model.phases_selectlist" id="phase">
            </select>
        </div>
        @*Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />*@
    </div>
    <div class="row">
        <div class="col-auto">
            <input type="submit" value="Filter" />
        </div>
    </div>
</form>

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Gameweek</th>
            <th>Home (FDR)</th>
            <th>Away (FDR)</th>
            <th>Score</th>
            <th>Kickoff Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.fixtures_list)
        {
            <tr>
                <td>@x.id</td>
                <td>@x.Event</td>
                <td><a asp-controller="Team" asp-action="Details" asp-route-id="@x.team_h">@x.team_h</a> (@x.team_a_difficulty)</td>
                <td><a asp-controller="Team" asp-action="Details" asp-route-id="@x.team_a">@x.team_a</a> (@x.team_h_difficulty)</td>
                <td>@x.team_h_score - @x.team_a_score</td>
                <td>@x.kickoff_time</td>
                <td><a asp-controller="Fixture" asp-action="Details" asp-route-id="@x.id">Details</a></td>
            </tr>
        }
    </tbody>
</table>
